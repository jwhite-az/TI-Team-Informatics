    <Grid ShowGridLines="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />

        </Grid.ColumnDefinitions>

        <!--<ItemsControl x:Name="lst" ItemTemplate="{DynamicResource DataTemplate_Level1}"/>-->
        <StackPanel   Grid.Column="0" Grid.Row="0"  Name="stackpanel">
            <TextBlock>
            Introduction Sentence
            </TextBlock>
            <TextBlock>
        <Hyperlink NavigateUri="Introduction.xaml" Click="HyperlinkButton_Click">Introduction
        </Hyperlink>
            </TextBlock>
            <TextBlock>
        <Hyperlink NavigateUri="Game.xaml">Start Game
        </Hyperlink>
            </TextBlock>
            <TextBlock>
        <Hyperlink NavigateUri="Survey.xaml">Survey
        </Hyperlink>
            </TextBlock>
            <Button Click="show_bar_graph">Show Graph</Button>
        </StackPanel>

        <Grid ShowGridLines="True" Name="grid_button" Grid.Column="1" Grid.Row="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>


        </Grid>
        <Label Name="scoreLabel" Grid.Column="2" Grid.Row="0">Score</Label>
        <Label Name="score" Grid.Column="2" Grid.Row="0">Score</Label>

        <Grid Name="grid_bar_graph" ShowGridLines="True"  Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0">Attention</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="0" >Dominance</TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="0">Pleasure</TextBlock>
            <Rectangle Name="bar_Pleasure" Height="100" Width="33"  Grid.Column="0" Grid.Row="1" ToolTip="Pleasure" Fill="#FFF40B0B" />
            <Rectangle Name="bar_Attention" Height="100" Width="33" Grid.Column="1" Grid.Row="1"
                       ToolTip="Attention" Fill="#FF7EF40B" />
            <Rectangle Name="bar_Dominance" Height="100" Width="33"   Grid.Column="2" Grid.Row="1"
                       ToolTip="Dominance" Fill="#FF410BF4" />

