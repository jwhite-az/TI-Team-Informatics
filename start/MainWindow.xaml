<Window x:Class="Working_Memory_Battery_and_Sensor_Input.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome Window" >
    <Grid>

        <StackPanel HorizontalAlignment="Left" Height="1084" VerticalAlignment="Top" Width="720" Margin="0,168,0,-744.8">
            <TextBlock>
            Introduction Sentence
            </TextBlock>
            <TextBlock>
        <Hyperlink NavigateUri="Introduction.xaml" Click="HyperlinkButton_Click">Introduction
        </Hyperlink>
            </TextBlock>
            <TextBlock>
        <Hyperlink NavigateUri="Game.xaml">Start Game
        </Hyperlink>
            </TextBlock>
            <TextBlock>
        <Hyperlink NavigateUri="Survey.xaml">Survey
        </Hyperlink>
            </TextBlock>
            <Grid Height="167" Margin="0,0,81,0" RenderTransformOrigin="0.263,0.451">
                <Grid.RowDefinitions>

                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="101.6" />
                    <RowDefinition Height="0*" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="Auto" MinWidth="302.4" />
                    <ColumnDefinition Width="52*" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="51*" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="1" Grid.Column="1">Attention</TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="2" >Dominance</TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="3">Pleasure</TextBlock>
                <Rectangle Grid.Row="1" Grid.Column="2" 
                           ToolTip="Pleasure" Fill="#FFF40B0B" Grid.RowSpan="2" />

                <Rectangle Grid.Row="2" Grid.Column="1" 
                       ToolTip="Attention" Fill="#FF7EF40B" Grid.RowSpan="2" />

                <Rectangle  Grid.Row="1" Grid.Column="3" 
                       ToolTip="Dominance" Fill="#FF410BF4"  Grid.RowSpan="2"/>
            </Grid>
            <Label x:Name="condition" Content="Label"/>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="Auto" MinWidth="302.4" />
                <ColumnDefinition Width="52*" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="51*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="button1" Content="Button" />
        <Button x:Name="button2" Content="Button" />
        <Button x:Name="button3" Content="Button" />
        <Button x:Name="button4" Content="Button" />
        </Grid>
    </Grid>

</Window>
